                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Label x:Name="Simulate_Part1_Label_Ally" Content="Allies" Margin="0,10,0,5" HorizontalAlignment="Center" FontSize="12"/>
