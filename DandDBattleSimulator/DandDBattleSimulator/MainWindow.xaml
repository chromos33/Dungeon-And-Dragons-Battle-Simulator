                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Abilities" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="54" Margin="0" IsEnabled="False">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
